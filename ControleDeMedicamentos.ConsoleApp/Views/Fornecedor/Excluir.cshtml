@using ControleDeMedicamentos.ConsoleApp.Models

@model ExcluirFornecedorViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Fornecedor";
}

<style>
    main {
        padding: 20px 600px;
    }

    @@media (max-width: 768px) {
        padding: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        background-color: var(--fundo-secundario);
        border: 1px solid var(--cor-borda-2);
        border-radius: 12px;
        padding: 30px;
        width: 600px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: bold;
        font-size: 18px;
        color: var(--texto-neutro);
    }

    input[type="text"] {
        width: 100%;
        height: 40px;
        margin-bottom: 20px;
        padding-left: 10px;
        font-size: 18px;
        border: 1px solid var(--cor-borda-2);
        border-radius: 6px;
        background-color: var(--fundo-primario);
        color: var(--texto-neutro);
    }

    #botaoConfirmar {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 200px;
        height: 35px;
        border: 1px solid var(--cor-principal);
        border-radius: 9px;
        background-color: #BF5E5A;
        color: var(--cor-neutra);
        cursor: pointer;
        font-size: 16px;
        padding: 0px;
    }

    #botaoVoltar {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 200px;
        height: 32px;
        border: 0px solid var(--cor-secundaria);
        border-radius: 9px;
        background-color: var(--cor-secundaria);
        color: var(--cor-neutra);
        cursor: pointer;
        font-size: 16px;
        font-family: Arial, Helvetica, sans-serif;
    }

    #botaoConfirmar:hover {
        background-color: #9b4b49;
    }

    #botaoVoltar:hover {
        background-color: #939393;
    }
</style>

<form action="/fornecedores/excluir/@Model.Id" method="post">
    <p>Tem certeza que deseja excluir o fornecedor <strong>@Model.Nome</strong>?</p>
    <div class="botoes-interacao">
        <a type="button" id="botaoVoltar" href="/fornecedores/visualizar">Voltar</a>
        <button type="submit" id="botaoConfirmar">Excluir</button>
    </div>
</form>