@using ControleDeMedicamentos.ConsoleApp.Models

@model VisualizarRequisicoesSaidaViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Requisições de Saída";
}

<link rel="stylesheet" href="~/vform.css" />

<div class="cards-container">
    <a href="/requisicoes-medicamentos/saida/cadastrar" class="card card-cadastrar" style="display: block; text-align: center; text-decoration: none;">
        <div style="font-size: 100px; margin-top: 20px; color: var(--cor-cadastrar)">+</div>
        <h3 style="margin: 0; padding: 0 0 40px 0; color: var(--cor-cadastrar)">Nova Requisição de Saída</h3>
    </a>

<div class="secao-cards">
    @foreach (var m in Model.Registros) {
        <div class="card">
            <div class="cabecalho-card">
                <h3>@m.DataOcorrencia.ToShortDateString()</h3>
            </div>

            <p><strong>Funcionário Requisitante:</strong> @m.FuncionarioRequisitante</p>
            <p><strong>Paciente:</strong> @m.Paciente</p>
            <p><strong>Medicamentos:</strong> @string.Join(", ", m.MedicamentoPrescrito)</p>
        </div>
    }
</div>
</div>